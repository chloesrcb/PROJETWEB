
include layout.jade
body(id="home-page")
  head
    include navbar.jade
    
  //liste des examens pour une mati√®re
  each item in itemsList
    p #{item.dataValues.libExamen} #{item.dataValues.dateExam}

  .container
    form.my-5.form-inline.aligns-items-center(action="/matiere/#{nomMatiere}/examens" method='post') 
      label(for="examen")   
      input(type="text" name='libelle' class="form-control" placeholder="Nom de l'examen") 
      label(for="date")   
      input(type="datetime-local" name='date' class="form-control" placeholder="Date de l'examen")
      button(type="submit" class="btn btn-info") +

  footer
    include footer.jade
