//PAGE D'ACCUEIL UTILISATEUR

include layout.jade
 
body(id="home-page")
  header
      include navbar.jade

  .container-fluid
      br
      .container.bg-light.col-xs-12.col-sm-12.col-md-10.col-lg-10.col-xl-10
          p(class="subtitle italic centerText") Examens à venir
          -if(exams.length==0)
            p Vous n'avez pas d'exam à venir
          -else{
              each mat in exams
                p 
                  a(href=mat) #{mat.split("/")[2]}  
          -}

  br
  .container-fluid
      br
      .container.bg-light.col-xs-12.col-sm-12.col-md-10.col-lg-10.col-xl-10
          p(class="subtitle italic centerText") Choses à faire
          -if(exams.length==0)
            p Vous n'avez rien à faire.
          -else{
              each mat in todos
                p 
                  a(href=mat) #{mat.split("/")[2]}  
          -}
    
  footer
    include footer.jade
