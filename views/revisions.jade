//Page A Faire

include layout.jade
 
body(id="home-page")
  header
      include navbar.jade
  table
    thead
      tr
        th
        each colonne in colonneList
          th #{colonne.dataValues.LibColonne}
        th
          .container
            form.form-inline(action="/matiere/#{nomMatiere}/revisions/newColonne" method='post') 
              .form-group
                label(for="ajout")   
                input(type="text" name='libelle' class="form-control" placeholder="Ajouter une colonne") 
                button(type="submit" class="btn btn-info") +
    tbody
      each ligne in ligneList
        tr  
          - for(var i = 0; i < ligneList.length; i++) {
            td #{ligneList[i].dataValues.LibLigne}
          - for(var j = 0; j < colonneList.length; j++){
              td #{caseList[i][j].dataValues.estCoche}
          - }
          - }
      tr
        .container
          form.form-inline(action="/matiere/#{nomMatiere}/revisions/newLigne" method='post') 
            .form-group
              label(for="ajout")   
              input(type="text" name='libelle' class="form-control" placeholder="Ajouter une ligne") 
              button(type="submit" class="btn btn-info") +


  footer
    include footer.jade
